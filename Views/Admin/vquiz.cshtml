@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style")

    @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {
            $.getJSON("/Admin/GetId", function (data) {
                $.each(data, function(i, item)
                {
                    $("#qtable").append("<tr><td>"+ item.Id + "</td>" + 
                                            "<td>"+ item.Question + "</td>" +
                                            "<td>"+ item.CorrectOption + "</td>" +
                                            "<td>"+ item.OptionB + "</td>" +
                                            "<td>"+ item.OptionC + "</td>" +
                                            "<td>"+ item.OptionD + "</td>" +
                                            "<td>"+ item.Subject + "</td>"
                        );
                });
                
            });
        });
    </script>

</head>
<body>
    <div id="welcome">
        <h1><a href="#">Welcome To Quiz Mania</a></h1>
    </div><br />


    <div id="menubar_container">
        <div id="menubar">

            <div id="menu_items">
                <ul id="menu">
                    <li><a href="index">Home</a></li>
                    <li class="current"><a href="quiz">Manage Quiz</a></li>
                    <li><a href="student">Manage Student</a></li>
                    <li><a href="/Home/index">Log-out</a></li>
                </ul>
            </div><!--close menu_Items-->

        </div><!--close menubar-->
    </div><!--close menubar_container-->

    <div id="slogan_container">
        <div id="slogan">
            <h2>Do you think you are intelligent??? Lets See !!!</h2>
        </div><!--close slogan-->
    </div><!--close slogan_container-->

    <div id="site_content">
        <div class="sidebar_container">

            <div class="sidebar">
                <div class="sidebar_item">
                    <a href="aquiz">Add Quiz</a>
                    <p>Click here to add a new Quiz</p>
                </div><!--close sidebar_item-->
            </div><!--close sidebar-->

            <div class="sidebar">
                <div class="sidebar_item">
                    <a href="dquiz">Delete Quiz</a>
                    <p>Click here to delete a Quiz</p>
                </div><!--close sidebar_item-->
            </div><!--close sidebar-->

            <div class="sidebar">
                <div class="sidebar_item">
                    <a href="uquiz">Update Quiz</a>
                    <p>Click here to update a Quiz</p>
                </div><!--close sidebar_item-->
            </div><!--close sidebar-->

            <div class="sidebar">
                <div class="sidebar_item">
                    <a href="vquiz">View All Quiz</a>
                    <p>Click here to view all Quizes</p>
                </div><!--close sidebar_item-->
            </div><!--close sidebar-->

        </div><!--close sidebar_container-->

        <div id="content">

            <div class="content_item">
                <div class="form_settings">
                    <form>
                        <h1>View All Quizes</h1>

                        <table border="1" id="qtable">
                            <tr>
                                <td>Id</td>
                                <td>Question</td>
                                <td>Correct Option</td>
                                <td>Option B</td>
                                <td>Option C</td>
                                <td>Option D</td>
                                <td>Category</td>
                            </tr>

                        </table>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <br />
    <div id="footer">
        CopyRight Reserved | Website template by Syed Anees
    </div>

</body>
</html>